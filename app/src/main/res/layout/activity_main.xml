    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.page.MainActivity">

    <com.page.DragLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content_top"
